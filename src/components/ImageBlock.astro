---
export interface ImageBlockProps {
  url: string;
  alt?: string;
}

const { url, alt } = Astro.props as ImageBlockProps;
---

<div class="my-8 rounded-2xl overflow-hidden shadow-lg hover:shadow-xl transition-shadow duration-300">
  <img 
    src={url} 
    alt={alt || "Memory image"} 
    class="w-full h-auto object-cover transform hover:scale-105 transition-transform duration-500"
    loading="lazy"
  />
</div>
