---
import { Image } from "astro:assets";
---

<footer
  class="snow-container fixed bottom-0 left-0 w-full h-0 z-0 pointer-events-none"
  aria-hidden="true"
>
  <div class="snow-left absolute bottom-0 left-0 w-1/3 max-w-xs opacity-80">
    <Image
      src="/footer/left.png"
      alt=""
      width={400}
      height={300}
      class="w-full h-auto object-contain object-bottom"
    />
  </div>
  <div class="snow-right absolute bottom-0 right-0 w-1/3 max-w-xs opacity-80">
    <Image
      src="/footer/right.png"
      alt=""
      width={400}
      height={300}
      class="w-full h-auto object-contain object-bottom"
    />
  </div>
</footer>
