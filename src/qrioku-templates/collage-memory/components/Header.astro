---
import { Image } from "astro:assets";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<header
  class="flex flex-col items-center text-center p-6 bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100 transition-colors duration-300"
>
  <div class="logo mb-4 w-full max-w-4xl">
    <h1
      class="text-4xl md:text-6xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-blue-600 to-purple-600 dark:from-blue-400 dark:to-purple-400"
    >
      {title}
    </h1>
  </div>
  <p
    class="intro max-w-xl text-center text-gray-700 dark:text-gray-300 text-lg leading-relaxed"
  >
    A collection of beautiful memories.
  </p>
</header>
