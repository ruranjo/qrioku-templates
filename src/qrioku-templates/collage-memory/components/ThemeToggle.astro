<div class="flex items-center justify-center p-2">
  <button
    id="theme-toggle"
    class="p-2 rounded-full bg-gray-200 dark:bg-gray-800 hover:bg-gray-300 dark:hover:bg-gray-700 transition-colors focus:ring-2 focus:ring-yellow-400 focus:outline-none"
    title="Toggles light & dark"
    aria-label="Toggle dark mode"
    aria-live="polite"
  >
    <svg
      aria-hidden="true"
      width="24"
      height="24"
      viewBox="0 0 24 24"
      class="text-yellow-500 dark:text-yellow-400"
      fill="currentColor"
    >
      <mask id="moon">
        <rect x="0" y="0" width="100%" height="100%" fill="white"></rect>
        <circle cx="40" cy="8" r="11" fill="black"></circle>
      </mask>
      <circle cx="12" cy="12" r="11" mask="url(#moon)"></circle>
      <g>
        <line x1="12" y1="1" x2="12" y2="3"></line>
        <line x1="12" y1="21" x2="12" y2="23"></line>
        <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line>
        <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line>
        <line x1="1" y1="12" x2="3" y2="12"></line>
        <line x1="21" y1="12" x2="23" y2="12"></line>
        <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line>
        <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line>
      </g>
    </svg>
  </button>
</div>

<script>
  const toggleBtn = document.getElementById("theme-toggle");

  const toggleTheme = () => {
    const html = document.documentElement;
    if (html.classList.contains("dark")) {
      html.classList.remove("dark");
      localStorage.setItem("theme", "light");
    } else {
      html.classList.add("dark");
      localStorage.setItem("theme", "dark");
    }
  };

  // Initialize theme based on local storage or system preference
  const initTheme = () => {
    const savedTheme = localStorage.getItem("theme");
    const systemDark = window.matchMedia(
      "(prefers-color-scheme: dark)",
    ).matches;

    if (savedTheme === "dark" || (!savedTheme && systemDark)) {
      document.documentElement.classList.add("dark");
    } else {
      document.documentElement.classList.remove("dark");
    }
  };

  initTheme();

  toggleBtn?.addEventListener("click", toggleTheme);
</script>
